@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="flex space-x-4">
@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a class="text-gray-700 hover:text-blue-600" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <i class="fas fa-user-circle mr-1"></i> @User.Identity?.Name
        </a>
    </li>
    <li>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="text-gray-700 hover:text-blue-600">
                <i class="fas fa-sign-out-alt mr-1"></i> Logout
            </button>
        </form>
    </li>
}
else
{
    <li>
        <a class="text-gray-700 hover:text-blue-600" asp-area="Identity" asp-page="/Account/Register">
            <i class="fas fa-user-plus mr-1"></i> Register
        </a>
    </li>
    <li>
        <a class="text-gray-700 hover:text-blue-600" asp-area="Identity" asp-page="/Account/Login">
            <i class="fas fa-sign-in-alt mr-1"></i> Login
        </a>
    </li>
}
</ul>